<!-- app/views/shelters/new.html.erb -->
<h1>避難所を追加</h1>

<%= form_with model: @shelter, local: true do |form| %>
  <% if @shelter.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@shelter.errors.count, "error") %> prohibited this shelter from being saved:</h2>
      <ul>
        <% @shelter.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :location %>
    <%= form.text_field :location %>
  </div>

  <div>
    <%= form.label :latitude %>
    <%= form.number_field :latitude, step: 0.000001 %>
  </div>

  <div>
    <%= form.label :longitude %>
    <%= form.number_field :longitude, step: 0.000001 %>
  </div>

  <div class="field">
  <%= form.label :phone_number %>
  <%= form.text_field :phone_number %>
</div>

<div class="field">
  <%= form.label :open_hours %>
  <%= form.text_field :open_hours %>
</div>

<div class="field">
  <%= form.label :facilities %>
  <%= form.text_area :facilities %>
</div>

<div class="field">
  <%= form.label :accessibility %>
  <%= form.text_field :accessibility %>
</div>

<div class="field">
  <%= form.label :images %>
  <%= form.text_area :images %>
</div>

  <div>
    <%= form.label :capacity %>
    <%= form.number_field :capacity %>
  </div>

  <div>
    <%= form.label :details %>
    <%= form.text_area :details %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>