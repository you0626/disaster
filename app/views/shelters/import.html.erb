<h1>CSVファイルをインポートする</h1>
<input type="file" id="csvFile" accept=".csv" />
<button id="loadCsv">CSVを読み込む</button>

<script>
    document.getElementById('loadCsv').addEventListener('click', function() {
        const fileInput = document.getElementById('csvFile');
        const file = fileInput.files[0];

        if (file) {
            const reader = new FileReader();
            reader.onload = function(event) {
                const csvData = event.target.result;
                // CSVデータを localStorage に保存
                localStorage.setItem('sheltersData', csvData);
                console.log('CSVデータが localStorage に保存されました');
            };
            reader.readAsText(file);
        } else {
            console.log('ファイルが選択されていません');
        }
    });
</script>